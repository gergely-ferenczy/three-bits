{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "types": ["node"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "strict": true,
    "noEmit": true
  },
  "include": [
    "test/**/*",
    "examples/**/*",
    "vite.config.ts",
    "vitest.config.ts",
    "commitlint.config.ts"
  ]
}
