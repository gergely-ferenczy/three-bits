{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "types": ["node"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "strict": true,
    "noEmit": true
  },
  "include": ["test/**/*", "vite.config.ts", "vitest.config.ts", "commitlint.config.ts"]
}
