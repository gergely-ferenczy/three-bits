{
  "compilerOptions": {
    "rootDir": "./lib",
    "outDir": "dist",
    "declarationDir": "dist/types",
    "lib": ["ESNext", "DOM"],
    "types": ["node"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "strict": true
  },
  "include": ["lib/**/*"]
}
